<div class="author-bio byline vcard{{#if author.cover}} author-cover{{/if}}" itemscope itemtype="http://schema.org/Person">
	<div class="author-bio-prep">Written by:</div>
	{{#if author.image}}
		<div class="author-media">
			<img id="author-image" class="author-image avatar" src="{{author.image}}" alt="{{author.name}}" itemprop="image" />
		</div>
	{{/if}}
	<div class="author-content">
		<h6 class="author-name author fn" itemprop="author">{{author.name}}</h6>
		{{#if author.bio}}
			<p class="author-description description summary" itemprop="description">{{author.bio}}</p>
		{{/if}}
		{{#if author.website}}
			<div class="author-meta">
				{{#if author.location}}
					<span class="author-location" itemprop="workLocation">{{author.location}}<span class="prep"> &mdash; </span></span>
				{{/if}}
				<a class="author-website url" href="{{author.website}}" itemprop="url">{{author.website}}</a>
			</div>
		{{/if}}
